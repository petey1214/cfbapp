extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome. Check your details below:
						div.signup-wall
							ul.user-details
								li Week ----> #{week}
								li Week Link -----> 

						a(href='/week/#{week}', class='text-center') Week #{week}

						a(href='/signout', class='text-center new-account') Sign Out
						
						
						div
							table.obj(id='table')
								
						script(src="../js/jquery-2.1.4.min.js")
						script(src="../js/jquery.dataTables.min.js")
						script.
							var myJson= [];
							var i = 0;
							$.getJSON("../data/week#{week}.json", function(data){
								for(person in data){
									var thisData =[];
									thisData[0] = data[i].home;
									thisData[1] = data[i].away;
									thisData[2] = data[i].vegas;
									thisData[3] = data[i].predicted_home;
									thisData[4] = data[i].predicted_away;
									thisData[5] = data[i].actual_home;
									thisData[6] = data[i].actual_away;

									myJson.push(thisData);
									i++;
								}

								$('#table').DataTable({
								data: myJson, 
								columns: [
								{title: "home"},
								{title: "away"},
								{title: "vegas"}, 
								{title: "predicted_home"},
								{title: "predicted_away"},
								{title: "actual_home"},
								{title: "actual_away"}
								]
								});
								//myJson = data;
							});
